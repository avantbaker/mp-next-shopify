#shopify-section-1585109653246 {
    @media only screen and (max-width: 992px) {
        margin-top: 0;
    }
}

.hero[data-adapt="false"] {
    height: 90vh;
}

.mp-info {
    display: flex;
    flex-direction: column;
    width: 100%;
}

{% comment %} .mp-info__background {
    background-color: #bbb;
} {% endcomment %}

.mp-info__image-wrapper {
    margin-bottom: 45px;
    display: flex;
    @media only screen and (max-width: 992px) {
        flex-direction: column;
    }
}

.mp-info__image-container {

    flex: 1;
    display: flex;
    padding: 40px;
    justify-content: center;
    img {
        align-self: center;
        max-width: 400px;
    }

}

.mp-info__image-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.mp-info__products {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.mp-info__product_card {
    display: flex;
    flex-direction: column;
    padding: 20px;
    border: 2px solid #058677;
    border-radius: 4px;
    margin-bottom: 20px;
    @media only screen and (min-width: 768px) {
        flex-basis: 30%;
    }
}

.mp-info__title {
    color: #84d1b2;
    margin-bottom: 5px;
    font-size: 1.7rem;
}

.mp-info__title-mb {
    margin-bottom: 12px;
}